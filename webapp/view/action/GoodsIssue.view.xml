<mvc:View controllerName="com.mii.scanner.controller.action.GoodsIssue" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="goodsIssuePage">
		<customHeader>
			<Toolbar id="header">
				<ToolbarSpacer/>
				<c:Icon id="goodsIssuePageIcon" src="sap-icon://outbox" size="2rem" color="#BB07FF" alt="GI"/>
				<c:Icon id="goodsIssuePageIcon2" src="{= ${view>/type}==='nonLE' ? 'sap-icon://filter' : 'sap-icon://bar-code'}" size="1.25rem"
					color="#BB07FF" class="sapUiSmallMarginEnd"/>
				<Title id="goodsIssuePageTitle" text="{path:'view>/type', formatter:'.setPageTitle'}" class="suwGoodsIssueTitle"/>
				<ToolbarSpacer/>
				<Button id="clearFormButton" icon="sap-icon://redo" press="onClearFormPress"/>
			</Toolbar>
		</customHeader>
		<content>
			<l:VerticalLayout id="messageStripContainer" width="100%"></l:VerticalLayout>
			<VBox width="100%" direction="Column" alignItems="Center" justifyContent="Start">
				<items>
					<HBox visible="{= ${data>/BESTQ}!=='0' &amp;&amp; ${data>/BESTQ}!==null}" alignItems="Center">
						<c:Icon id="specialStockIndicatorIcon" src="sap-icon://quality-issue" color="#f9a429" size="4rem" class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="specialStockRestrictedIcon" src="sap-icon://locked" visible="{= ${data>/BESTQ}==='S'}" color="#f9a429" size="3rem"
							class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="specialStockQualityIcon" src="sap-icon://lab" visible="{= ${data>/BESTQ}==='Q'}" color="#f9a429" size="3rem"
							class="sapUiMediumMarginBeginEnd"/>
					</HBox>
					<HBox visible="{path:'data>/VFDAT', formatter:'.formatter.isPastDate'}" alignItems="Center">
						<c:Icon id="expirationDateIndicatorIcon" src="sap-icon://quality-issue" color="#f9a429" size="4rem" class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="expirationDateOutOfDateIcon" src="sap-icon://date-time" color="#f9a429" size="3rem" class="sapUiMediumMarginBeginEnd"/>
					</HBox>
					<f:SimpleForm id="dataEntry" editable="true" layout="ResponsiveGridLayout" breakpointM="500" 
						labelSpanXL="4" labelSpanL="4" labelSpanM="3" labelSpanS="12"
						emptySpanXL="5" emptySpanL="4" emptySpanM="2" emptySpanS="0">
						<f:content>
							<!-- LENUM -->
							<Label text="{i18n>lableTextFormGoodsIssueStorageUnit}"/>
							<Input id="storageUnitInput" value="{data>/storageUnit}" change="onStorageUnitInputChange" valueState="{view>/storageUnitNumberValueState}"
								visible="{=${view>/type}!=='nonLE'}" maxLength="20" class="noScannerInput"/>
							<!-- AUFNR -->
							<Label text="{i18n>lableTextFormGoodsIssueOrder}"/>
							<Input id="orderNumberInput" change="onOrderNumberInputChange" value="{path: 'data>/orderNumber', type:'.sapType.AUFNR'}"
								valueState="{view>/orderNumberValueState}" maxLength="7" class="noScannerInput"></Input>
							<!-- MATNR -->
							<Label text="{i18n>lableTextFormGoodsIssueMaterial}"/>
							<Input id="materialNumberInput" value="{path: 'data>/materialNumber', type:'.sapType.MATNR'}" change="onMaterialNumberInputChange"
								valueState="{view>/materialNumberValueState}" visible="{=${view>/type}==='nonLE'}" maxLength="11" class="noScannerInput"></Input>
							<!-- QUAN, UOM -->
							<Label text="{i18n>lableTextFormGoodsIssueQuantity}, {i18n>lableTextFormGoodsIssueUnitOfMeasureShort}"/>
							<HBox alignItems="Center">
								<Input id="quantityInput" textAlign="End" change="onQuantityInputChange" value="{path: 'data>/entryQuantity', type:'.sapType.QUAN'}"></Input>
								<c:Icon id="clearQuantityInputIcon" src="sap-icon://eraser" press="onClearQuantityInputPress" size="{=${device>/system/desktop}===true ? '1.25rem' : '1.75rem'}" class="sapUiSmallMarginEnd"></c:Icon>
								<layoutData>
									<l:GridData span="XL2 L3 M5 S8"/>
								</layoutData>
							</HBox>
							<Input id="unitOfMeasureInput" value="{path: 'data>/unitOfMeasure', type:'.sapType.MEINS'}" change="onUnitOfMeasureInputChange"
								editable="{=${view>/type}==='nonLE'}" maxLength="4">
								<layoutData>
									<l:GridData span="XL1 L1 M2 S4"/>
								</layoutData>
							</Input>
							<!-- LGORT -->
							<Label text="{i18n>lableTextFormGoodsIssueStorageLocation}"/>
							<Input id="storageLocationInput" value="{path: 'data>/storageLocation', type:'.sapType.LGORT'}" change="onStorageLocationInputChange"
								visible="{=${view>/type}==='nonLE'}" maxLength="4" class="noScannerInput"></Input>
							<!-- BULK -->
							<Label text="{i18n>lableTextFormGoodsIssueBulkMaterial}"/>
							<Switch id="bulkMaterialSwitch" state="{data>/bulkMaterialIndicator}" customTextOn="{i18n>switchCustomOnYes}"
								customTextOff="{i18n>switchCustomOffNo}" visible="{=${view>/type}==='nonLE'}" tooltip="{i18n>lableTextFormGoodsIssueBulkMaterialTooltip}"></Switch>
						</f:content>
					</f:SimpleForm>
				</items>
			</VBox>
			<!-- Storage Unit Info Form -->
			<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML"/>
		</content>
		<footer>
			<Toolbar id="footer">
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveGoodsIssue}" press="onSave" enabled="{view>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelGoodsIssue}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>