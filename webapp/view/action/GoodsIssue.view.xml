<mvc:View controllerName="com.mii.scanner.controller.action.GoodsIssue" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page title="{i18n>titleGoodsIssue}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" 
				breakpointM="400" 
				labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" 
				emptySpanXL="5"  emptySpanL="4" emptySpanM="2" emptySpanS="0">
				<f:content>
					<Label text="{i18n>lableTextFormGoodsIssueStorageUnit}"/>
					<Input value="{data>/LENUM}"/>
					
					<Label text="{i18n>lableTextFormGoodsIssueQuantity}"/>
					<Input value="{data>/MENGE}"></Input>
					<Input value="{data>/MEINH}" editable="false">
						<layoutData>
							<l:GridData span="XL2 L1 M3 S4"/>
						</layoutData>
					</Input>
					
					<Label text="{i18n>lableTextFormGoodsIssueOrder}"/>
					<Input value="{ORDER}">
						<layoutData>
							<l:GridData span="XL2 L1 M3 S4"/>
						</layoutData>
					</Input>
					
					<Label text="{i18n>lableTextFormGoodsIssueStorageLocation}"/>
					<Input value="{LGORT}"/>
					
					<Label text="{i18n>lableTextFormGoodsIssueStorageLocation}"/>
					<TextArea value="{INFO}"></TextArea>
					
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>textButtonSaveGoodsIssue}" press="onSave" />
				<Button type="Reject" text="{i18n>textButtonCancelGoodsIssue}" press="onCancelAction" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>