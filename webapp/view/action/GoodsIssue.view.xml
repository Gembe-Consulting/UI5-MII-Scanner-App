<mvc:View controllerName="com.mii.scanner.controller.action.GoodsIssue" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="goodsIssuePage" title="{path:'view>/type', formatter:'.setPageTitle'}">
		<headerContent>
			<Button id="clearFormButton" icon="sap-icon://redo" press="onClearFormPress"/>
		</headerContent>
		<content>
			<l:VerticalLayout id="messageStripContainer" width="100%"></l:VerticalLayout>
			<VBox height="100%" width="100%" direction="Column" alignItems="Center" justifyContent="Start">
				<items>
					<HBox visible="{= ${data>/BESTQ}!=='0' &amp;&amp; ${data>/BESTQ}!==null}" alignItems="Center">
						<c:Icon id="specialStockIndicatorIcon" src="sap-icon://quality-issue" color="#f9a429" size="4rem" class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="specialStockRestrictedIcon" src="sap-icon://locked" visible="{= ${data>/BESTQ}==='S'}" color="#f9a429" size="3rem"
							class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="specialStockQualityIcon" src="sap-icon://lab" visible="{= ${data>/BESTQ}==='Q'}" color="#f9a429" size="3rem"
							class="sapUiMediumMarginBeginEnd"/>
					</HBox>
					<HBox visible="{path:'data>/VFDAT', formatter:'.formatter.isPastDate'}" alignItems="Center">
						<c:Icon id="expirationDateIndicatorIcon" src="sap-icon://quality-issue" color="#ee0000" size="4rem" class="sapUiMediumMarginBeginEnd"/>
						<c:Icon id="expirationDateOutOfDateIcon" src="sap-icon://sys-cancel-2" color="#ee0000" size="3rem" class="sapUiMediumMarginBeginEnd"/>
					</HBox>
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" breakpointM="400" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
						emptySpanXL="5" emptySpanL="4" emptySpanM="2" emptySpanS="0">
						<f:content>
							<Label text="{i18n>lableTextFormGoodsIssueStorageUnit}"/>
							<Input id="storageUnitInput" value="{data>/storageUnitNumber}" visible="{=${view>/type}!=='nonLE'}" change="onStorageUnitNumberChange"/>
							<Label text="{i18n>lableTextFormGoodsIssueOrder}"/>
							<Input id="orderNumberInput" maxLength="7" change="onOrderNumberChange" value="{path: 'data>/orderNumber', type:'.sapType.AUFNR'}"></Input>
							<Label text="{i18n>lableTextFormGoodsIssueQuantity}, {i18n>lableTextFormGoodsIssueUnitOfMeasure}"/>
							<Input id="quantityInput" textAlign="End" change="onQuantityChange" value="{path: 'data>/entryQuantity', type:'.sapType.QUAN'}">
								<layoutData>
									<l:GridData span="XL2 L3 M4 S8"/>
								</layoutData>
							</Input>
							<Input id="unitOfMeasureInput" change="onUnitOfMeasureChange" value="{path: 'data>/unitOfMeasure', type:'.sapType.MEINS'}" editable="false">
								<layoutData>
									<l:GridData span="XL1 L1 M2 S4"/>
								</layoutData>
							</Input>
							<Label text="{i18n>lableTextFormGoodsIssueStorageLocation}"/>
							<Input id="storageLocationInput" maxLength="4" change="onStorageLocationChange"
								value="{path: 'data>/storageLocation', type:'.sapType.LGORT'}" visible="{=${view>/type}==='nonLE'}"></Input>
							<Label text="{i18n>lableTextFormGoodsIssueMaterial}"/>
							<Input id="materialNumberInput" change="onMaterialNumbeChange" value="{path: 'data>/materialNumber', type:'.sapType.MATNR'}"
								visible="{=${view>/type}==='nonLE'}"></Input>
							<Label text="{i18n>lableTextFormGoodsIssueBulkMaterial}"/>
							<Switch id="bulkMaterialSwitch" state="{data>/bulkMaterialIndicator}" customTextOn="{i18n>switchCustomOnYes}"
								customTextOff="{i18n>switchCustomOffNo}" visible="{=${view>/type}==='nonLE'}"></Switch>
						</f:content>
					</f:SimpleForm>
					<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML"/>
				</items>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveGoodsIssue}" press="onSave" enabled="{view>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelGoodsIssue}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>