<mvc:View controllerName="com.mii.scanner.controller.action.StockTransfer" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="stockTransferPage" title="{i18n>titleStockTransfer}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" breakpointM="400" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
				emptySpanXL="5" emptySpanL="4" emptySpanM="2" emptySpanS="0">
				<f:content>
					<Label text="{i18n>lableTextFormStockTransferStorageBinTarget}"/>
					<ComboBox>
						<c:ListItem key="" text="---"/>
						<c:ListItem key="BB1" text="BB Aufgabe 1"/>
						<c:ListItem key="BB2" text="BB Aufgabe 2"/>
					</ComboBox>
					<Label text="{i18n>lableTextFormStockTransferStorageUnit}"/>
					<Input value="{data>/LENUM}"/>
					<Label text="{i18n>lableTextFormStockTransferQuantity}"/>
					<Input id="quantityInput" textAlign="End" change="onQuantityChange" value="{path: 'data>/SOLLME', type:'.sapType.QUAN'}">
						<layoutData>
							<l:GridData span="XL2 L3 M4 S8"/>
						</layoutData>
					</Input>
					<Input id="unitOfMeasureInput" change="onUnitOfMeasureChange" value="{path: 'data>/MEINH', type:'.sapType.MEINS'}"
						editable="{=${data>/LENUM}===null}">
						<layoutData>
							<l:GridData span="XL1 L1 M2 S4"/>
						</layoutData>
					</Input>
				</f:content>
			</f:SimpleForm>
			<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveStockTransfer}" press="onSave" enabled="{data>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelStockTransfer}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>