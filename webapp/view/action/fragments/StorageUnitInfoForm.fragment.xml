<f:SimpleForm xmlns:f="sap.ui.layout.form" xmlns="sap.m" 
	visible="{=${data>/LENUM}!==null}" editable="false" layout="ResponsiveGridLayout"
	breakpointM="250" 
	labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" 
	emptySpanXL="4" emptySpanL="4" emptySpanM="2" emptySpanS="0">
	<f:content>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentMaterial}"/>
		<Text id="storageUnitFramgentMaterialInfoText" text="{data>/MATNR} - {data>/MAKTX}"/>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentStorageBin}"/>
		<Text id="storageUnitFramgentStorageBinText" text="{data>/LGPLA}"/>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentStorageType}"/>
		<Text id="storageUnitFramgentStorageTypeText" text="{data>/LGTYP}"/>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentStorageUnitType}"/>
		<Text id="storageUnitFramgentStorageUnitTypeText" text="{data>/LETYT}"/>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentBatch}"/>
		<Text id="storageUnitFramgentBatchText" text="{data>/CHARG}"/>
		<Label text="{i18n>labelTextStorageUnitInfoActionFragmentExpirationDate}"/>
		<Text id="storageUnitFramgentExpirationDateText" text="{path: 'data>/VFDAT', type:'sap.ui.model.type.Date', formatOptions: { source: { pattern: 'MM-dd-yyyy' }}}"/>
	</f:content>
</f:SimpleForm>