<mvc:View controllerName="com.mii.scanner.controller.action.GoodsReceipt" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="goodsReceiptPage" title="{i18n>titleGoodsReceipt}" showNavButton="true" navButtonPress="onNavBack">
		<headerContent>
			<Button icon="sap-icon://redo" press="onClearFormPress"/>
		</headerContent>
		<content>
			<!--
			Kleine SimpleForm Kunde: nach dem ResponsiveGridLayout:
				- XL, L, M, S gibt einen bestimmten "Zustand" wieder in dem sich das Display befindet
				- breakpoint: Anzahl Pixel ab dem ein bestimmter "Zustand" eintritt
				- Form ist unterteilt in 12 Spalten
				- labelSpan gibt an, wieviele Spalten fÃ¼r das Label reserviert werden
				~~~~~~~~~~~~~~~~~
				Beispiel:
					labelSpanS="12" => auf kleinen devices wird die Lablezeile auf die komplette Zeile gespannt
			-->
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" 
				breakpointM="400" 
				labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" 
				emptySpanXL="5"  emptySpanL="4" emptySpanM="2" emptySpanS="0">
				<f:content>
					
					<Label text="{i18n>lableTextFormGoodsReceiptStorageUnit}"/>
					<Input id="storageBinInput"  maxLength="20" 
						change="onStorageUnitNumberChange"
						value="{path: 'data>/LENUM', type:'.sapType.LENUM'}"
						editable="{=${data>/LGORT}==='1000' || ${data>/LGORT}===''}"></Input>
						
					<Label text="{i18n>lableTextFormGoodsReceiptQuantity}, {i18n>lableTextFormGoodsReceiptUnit}"/>
					<Input id="quantityInput" textAlign="End" 
						change="onQuantityChange"
						value="{path: 'data>/SOLLME', type:'.sapType.QUAN'}">
						<layoutData>
							<l:GridData span="XL2 L3 M4 S8" />
						</layoutData>
					</Input>
					<Input id="unitOfMeasureInput" 
						change="onUnitOfMeasureChange"
						value="{path: 'data>/MEINH', type:'.sapType.MEINS'}" 
						editable="{=${data>/LENUM}===null}">
						<layoutData>
							<l:GridData span="XL1 L1 M2 S4" />
						</layoutData>
					</Input>
					
					<Label text="{i18n>lableTextFormGoodsReceiptOrder}"/>
					<Input id="orderNumberInput" maxLength="7" 
						change="onOrderNumbeChange"
						value="{path: 'data>/AUFNR', type:'.sapType.AUFNR'}" 
						editable="{=${data>/LENUM}===null}"></Input>
						
					<Label text="{i18n>lableTextFormGoodsReceiptStorageLocation}"/>
					<Input id="storageLocationInput" maxLength="4" 
						change="onStorageLocationChange"
						value="{path: 'data>/LGORT', type:'.sapType.LGORT'}"
						editable="{=${data>/LENUM}===null}"></Input>
						
				</f:content>
			</f:SimpleForm>
			
			<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML" />

		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveGoodsReceipt}" press="onSave" enabled="{data>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelGoodsReceipt}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>