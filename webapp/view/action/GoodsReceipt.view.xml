<mvc:View controllerName="com.mii.scanner.controller.action.GoodsReceipt" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="goodsReceiptPage" title="{i18n>titleGoodsReceipt}" showNavButton="true" navButtonPress="onNavBack">
		<headerContent>
			<Button icon="sap-icon://redo" press="onClearFormPress"/>
		</headerContent>
		<content>
			<f:SimpleForm title="{i18n>titleFormGoodsReceipt}" editable="true" layout="ResponsiveGridLayout">
				<f:content>
					<Label text="{i18n>lableTextFormGoodsReceiptStorageBin}"/>
					<Input id="storageBinInput" 
						change="onStorageBinNumberChange"
						value="{path: 'data>/LE', type:'sap.ui.model.type.Integer', formatOptions: { emptyString: null}}">
					</Input>
					
					<Label text="{i18n>lableTextFormGoodsReceiptQuantity}"/>
					<HBox>
						<Input id="quantityInput" 
							value="{path: 'data>/MENGE', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 3, maxFractionDigits: 3}}">
						</Input>
						<Input id="unitOfMeasureInput" width="75px"
							value="{data>/ME}" 
							editable="{=${data>/LE}===null}">
						</Input>
					</HBox>
					
					<Label text="{i18n>lableTextFormGoodsReceiptOrder}"/>
					<Input id="orderNumberInput" width="150px"
						value="{path: 'data>/ORDER', type:'sap.ui.model.type.Integer', formatOptions: { emptyString: null}}"
						editable="{=${data>/LE}===null}">
					</Input>
						
					<Label text="{i18n>lableTextFormGoodsReceiptStorageLocation}"/>
					<Input id="storageLocationInput" width="150px"
						value="{path: 'data>/LGORT', type:'sap.ui.model.type.String'}"
						editable="{=${data>/LE}===null}">
					</Input>
					
					<Label text="{i18n>lableTextFormGoodsReceiptAdditionalData}"/>
					<TextArea id="infoTestArea" value="{data>/INFO}" editable="false"></TextArea>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveGoodsReceipt}" press="onSave" enabled="data>/bValid"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelGoodsReceipt}" press="onCancelAction" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>