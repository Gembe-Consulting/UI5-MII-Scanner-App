<mvc:View controllerName="com.mii.scanner.controller.action.RollerConvoyer" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="rollerConveyorPage">
			<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<c:Icon id="rollerConveyorPageIcon" src="sap-icon://instance" size="2rem" color="#05B074" alt="RC"/>
				<c:Icon id="rollerConveyorPageIcon2" src="sap-icon://process" size="1.25rem" color="#05B074" class="sapUiSmallMarginEnd" />
				<Title id="rollerConveyorPageTitle" text="{i18n>titleRollerConveyor}" class="suwRollerConveyorTitle"/>
				<ToolbarSpacer/>
				<Button id="clearFormButton" icon="sap-icon://redo" press="onClearFormPress"/>
			</Toolbar>
		</customHeader>
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" breakpointM="400" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
				emptySpanXL="5" emptySpanL="4" emptySpanM="2" emptySpanS="0">
				<f:content>
					<Label text="{i18n>lableTextFormRollerConveyorStorageUnit}"/>
					<Input value="{data>/LENUM}"/>
					<Label text="{i18n>lableTextFormRollerConveyorQuantity}, {i18n>lableTextFormRollerConveyorUnitOfMeasure}"/>
					<HBox alignItems="Center">
						<Input id="quantityInput" textAlign="End" change="onQuantityChange" value="{path: 'data>/SOLLME', type:'.sapType.QUAN'}">
							<layoutData>
								<l:GridData span="XL2 L3 M4 S8"/>
							</layoutData>
						</Input>
						<c:Icon id="clearQuantityInputIcon" src="sap-icon://eraser" press="onClearQuantityInputPress" class="sapUiSmallMarginEnd"></c:Icon>
					</HBox>
					<Input id="unitOfMeasureInput" change="onUnitOfMeasureChange" value="{path: 'data>/MEINH', type:'.sapType.MEINS'}"
						editable="{=${data>/LENUM}===null}">
						<layoutData>
							<l:GridData span="XL1 L1 M2 S4"/>
						</layoutData>
					</Input>
					<Label text="{i18n>lableTextFormRollerConveyorStorageBin}"/>
					<ComboBox showSecondaryValues="true">
						<c:ListItem key="01" text="Rolltor" additionalText="ROLLENBAHN"/>
						<c:ListItem key="02" text="Beumer le. Palette" additionalText="BEUM"/>
						<c:ListItem key="03" text="Stapler" additionalText="STAPLER"/>
						<c:ListItem key="04" text="Palettierer le. Palette" additionalText="PALE"/>
					</ComboBox>
					<Label text="{i18n>lableTextFormRollerConveyorStorageStretcher}"/>
					<Switch id="stretcherActiveSwitch" customTextOn="{i18n>switchCustomOnYes}" customTextOff="{i18n>switchCustomOffNo}" state="{data>/STRETCH}"></Switch>
				</f:content>
			</f:SimpleForm>
			<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>textButtonSaveRollerConveyor}" press="onSave" enabled="{data>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>textButtonCancelRollerConveyor}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>