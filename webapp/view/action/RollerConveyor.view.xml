<mvc:View controllerName="com.mii.scanner.controller.action.RollerConveyor" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="rollerConveyorPage">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<c:Icon id="rollerConveyorPageIcon" src="sap-icon://instance" size="2rem" color="#05B074" alt="RC"/>
				<c:Icon id="rollerConveyorPageIcon2" src="sap-icon://process" size="1.25rem" color="#05B074" class="sapUiSmallMarginEnd" alt="RC2"/>
				<Title id="rollerConveyorPageTitle" text="{i18n>rollerConveyor.pageTitle.text}" class="suwRollerConveyorTitle"/>
				<ToolbarSpacer/>
				<Button id="clearFormButton" icon="sap-icon://redo" press="onClearFormPress"/>
			</Toolbar>
		</customHeader>
		<content>
			<l:VerticalLayout id="messageStripContainer" width="100%"></l:VerticalLayout>
			<VBox height="100%" width="100%" direction="Column" alignItems="Center" justifyContent="Start">
				<items>
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" breakpointM="400" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
						emptySpanXL="5" emptySpanL="4" emptySpanM="2" emptySpanS="0">
						<f:content>
							<Label text="{i18n>rollerConveyor.form.label.storageUnit.text}"/>
							<Input id="storageUnitInput" value="{path: 'data>/storageUnit', type:'.sapType.LENUM'}" change="onStorageUnitInputChange"
								valueState="{view>/storageUnitValueState}" maxLength="20" class="noScannerInput"/>
							<Label text="{i18n>rollerConveyor.form.label.quantity.text}, {i18n>rollerConveyor.form.label.unitOfMeasure-S.text}"/>
							<HBox alignItems="Center">
								<Input id="quantityInput" value="{path: 'data>/entryQuantity', type:'.sapType.QUAN'}" change="onQuantityChange"
									editable="{path: 'data>/ISTME', formatter:'.formatter.isEmptyStorageUnit' }" textAlign="End"></Input>
								<c:Icon id="clearQuantityInputIcon" src="sap-icon://eraser" press="onClearQuantityInputPress" class="sapUiSmallMarginEnd" alt="CLEAR"></c:Icon>
								<layoutData>
									<l:GridData span="XL2 L3 M4 S8"/>
								</layoutData>
							</HBox>
							<Input id="unitOfMeasureInput" value="{path: 'data>/unitOfMeasure', type:'.sapType.MEINH'}"
								editable="{= ${data>/storageUnit} === 90000000000000000000 }">
								<layoutData>
									<l:GridData span="XL1 L1 M2 S4"/>
								</layoutData>
							</Input>
							<Label text="{i18n>rollerConveyor.form.label.storageBin.text}"/>
							<ComboBox id="storageBinSelection" selectedKey="{data>/storageBin}" 
								change="onStorageBinSelectionChange" selectionChange="onStorageBinSelectionChange"
								showSecondaryValues="true" filterSecondaryValues="true">
								<c:ListItem key="ROLLENBAHN" text="{i18n>rollerConveyor.comboBox.listItem-ROLLENBAHN.text}" additionalText="ROLLENBAHN"
									enabled="{= ${data>/storageUnit} !== 90000000000000000000 }"/>
								<c:ListItem key="BEUM" text="{i18n>rollerConveyor.comboBox.listItem-BEUM.text}" additionalText="BEUM"/>
								<c:ListItem key="STAPLER" text="{i18n>rollerConveyor.comboBox.listItem-STAPLER.text}" additionalText="STAPLER"
									enabled="{= ${data>/storageUnit} !== 90000000000000000000 }"/>
								<c:ListItem key="PALE" text="{i18n>rollerConveyor.comboBox.listItem-PALE.text}" additionalText="PALE"/>
							</ComboBox>
							<Label text="{i18n>rollerConveyor.form.label.stretcher.text}"/>
							<Switch id="stretcherActiveSwitch" customTextOn="{i18n>switchCustomOnYes}" customTextOff="{i18n>switchCustomOffNo}"
								state="{data>/stretcherActive}"></Switch>
						</f:content>
					</f:SimpleForm>
					<c:Fragment fragmentName="com.mii.scanner.view.action.fragments.StorageUnitInfoForm" type="XML"/>
				</items>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveButton" type="Accept" text="{i18n>rollerConveyor.saveButton.text}" press="onSave" enabled="{view>/bValid}"/>
				<Button id="cancelButton" type="Reject" text="{i18n>rollerConveyor.canceButton.text}" press="onCancelAction"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>