<mvc:View controllerName="com.mii.scanner.controller.nav.NavBaseController" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page id="goodsMovementPage" title="{i18n>titleGoodsMovement}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<List
				footerText="{i18n>footerTextUserName} '{user>/USERLOGIN}' {i18n>footerTextLoggedOn} {path: 'user>/lastLoginTimestamp', type: 'sap.ui.model.type.DateTime', formatOptions: { relative: true } }"
				mode="None" width="100%" class="sapUiResponsiveMargin" inset="{= !${device>/system/phone} }">
				<items>
					<CustomListItem id="goodsReceiptItem" type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<HBox width="8rem" justifyContent="Center">
									<c:Icon src="sap-icon://inbox" size="3rem" height="4rem" color="#1F35DE" alt="GR"/>
									<c:Icon src="sap-icon://bar-code" size="2rem" color="#1F35DE" alt="WITH_LE"/>
								</HBox>
								<VBox width="100%">
									<Label text="{i18n>itemLabelTextGoodsReceipt}" design="Bold"/>
									<Label text="{i18n>itemInfoTextGoodsReceipt}" visible="{= !${device>/system/phone} }"/>
								</VBox>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="goodsReceipt"/>
						</customData>
					</CustomListItem>
					<CustomListItem id="goodsIssueWithLEItem" type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<HBox width="8rem" justifyContent="Center">
									<c:Icon src="sap-icon://outbox" size="3rem" height="4rem" color="#BB07FF" alt="GI"/>
									<c:Icon src="sap-icon://bar-code" size="2rem" color="#BB07FF" alt="WITH_LE"/>
								</HBox>
								<VBox width="100%">
									<Label text="{i18n>itemLabelTextGoodsIssueWithLE}" design="Bold"/>
									<Label text="{i18n>itemInfoTextGoodsIssueWithLE}" visible="{= !${device>/system/phone} }"/>
								</VBox>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="goodsIssue"/>
							<c:CustomData key="type" value="withLE"/>
						</customData>
					</CustomListItem>
					<CustomListItem id="goodsIssueNonLEItem" type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<HBox width="8rem" justifyContent="Center">
									<c:Icon src="sap-icon://outbox" size="3rem" height="4rem" color="#BB07FF" alt="GI"/>
									<c:Icon src="sap-icon://filter" size="2rem" color="#BB07FF" alt="WITHOUT_LE"/>
								</HBox>
								<VBox width="100%">
									<Label text="{i18n>itemLabelTextGoodsIssueNonLE}" design="Bold"/>
									<Label text="{i18n>itemInfoTextGoodsIssueNonLE}" visible="{= !${device>/system/phone} }"/>
								</VBox>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="goodsIssue"/>
							<c:CustomData key="type" value="nonLE"/>
						</customData>
					</CustomListItem>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<HBox width="8rem" justifyContent="Center">
									<c:Icon src="sap-icon://offsite-work" size="3rem" height="4rem" color="#05B074" alt="ST"/>
									<c:Icon src="sap-icon://shipping-status" size="2rem" color="#05B074" alt="ST"/>
								</HBox>
								<VBox width="100%">
									<Label text="{i18n>itemLabelTextStockTransfer}" design="Bold"/>
									<Label text="{i18n>itemInfoTextStockTransfer}" visible="{= !${device>/system/phone} }"/>
								</VBox>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="stockTransfer"/>
						</customData>
					</CustomListItem>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<HBox width="8rem" justifyContent="Center">
									<c:Icon src="sap-icon://instance" size="3rem" height="4rem" color="#FFAC00" alt="RC"/>
									<c:Icon src="sap-icon://process" size="2rem" color="#FFAC00" alt="RC"/>
								</HBox>
								<VBox width="100%">
									<Label text="{i18n>itemLabelTextRollerConveyor}" design="Bold"/>
									<Label text="{i18n>itemInfoTextRollerConveyor}" visible="{= !${device>/system/phone} }"/>
								</VBox>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="rollerConveyor"/>
						</customData>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>