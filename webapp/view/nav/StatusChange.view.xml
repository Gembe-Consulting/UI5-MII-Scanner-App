<mvc:View controllerName="com.mii.scanner.controller.nav.NavBaseController" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page id="statusChangePage" title="{i18n>titleStatusChange}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<List
				footerText="{i18n>footerTextUserName} '{user>/USERLOGIN}' {i18n>footerTextLoggedOn} {path: 'user>/lastLoginTimestamp', type: 'sap.ui.model.type.DateTime', formatOptions: { relative: true } }"
				mode="None" width="100%" class="sapUiSmallMarginTop" inset="{= !${device>/system/phone} }">
				<items>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<c:Icon src="sap-icon://begin" size="3rem" height="4rem" width="8rem" color="#330066" alt="START"/>
								<Label text="{i18n>itemLabelTextStartOperation}" design="Bold"/>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="startOperation"/>
						</customData>
					</CustomListItem>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<c:Icon src="sap-icon://error" size="3rem" height="4rem" width="8rem" color="#FFAC00" alt="INTERRUPT"/>
								<Label text="{i18n>itemLabelTextInterruptOperation}" design="Bold"/>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="interruptOperation"/>
						</customData>
					</CustomListItem>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<c:Icon src="sap-icon://restart" size="3rem" height="4rem" width="8rem" color="#BB07FF" alt="RESUME"/>
								<Label text="{i18n>itemLabelTextContinueOperation}" design="Bold"/>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="resumeOperation"/>
						</customData>
					</CustomListItem>
					<CustomListItem type="Navigation" press="onNavForward" class="sapUiResponsiveMargin">
						<content>
							<HBox alignItems="Center" justifyContent="Start">
								<c:Icon src="sap-icon://complete" size="3rem" height="4rem" width="8rem" color="#05b074" alt="FINISH"/>
								<Label text="{i18n>itemLabelFinishOperation}" design="Bold"/>
							</HBox>
						</content>
						<customData>
							<c:CustomData key="target" value="finishOperation"/>
						</customData>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>