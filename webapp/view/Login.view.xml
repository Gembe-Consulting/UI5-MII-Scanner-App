<mvc:View controllerName="com.mii.scanner.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page id="loginPage" 
		title="{i18n>titleLogin}">
		<content>
			<HBox alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTopBottom">
				<Label text="{i18n>userNameLableText}" labelFor="userIdInput" class="sapUiSmallMarginEnd"/>
				<Input id="usernameInput" required="true" submit="onLogin" placeholder="{i18n>userNameInputPlaceholder}" liveChange="onLiveInput" />
			</HBox>
			<Button id="loginButton" text="{i18n>loginButtonText}" press="onLogin" width="100%"/>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Text text="version {i18n>appVersion}" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>