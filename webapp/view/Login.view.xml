<mvc:View controllerName="com.mii.scanner.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>titleLogin}">
		<content>
			<HBox alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTopBottom">
				<Label text="{i18n>userNameLableText}" labelFor="userIdInput" class="sapUiSmallMarginEnd"/>
				<Input id="userIdInput"
					value="{path: 'user>/d/results/0/Rowset/results/0/Row/results/0/USERLOGIN', type: 'sap.ui.model.type.String', constraints: {minLength: 3, maxLength: 12} }"
					required="true" change="onLogin" submit="onLogin" placeholder="{i18n>userNameInputPlaceholder}"/>
			</HBox>
			<Button text="{i18n>loginButtonText}" press="onLogin" width="100%"/>
		</content>
	</Page>
</mvc:View>