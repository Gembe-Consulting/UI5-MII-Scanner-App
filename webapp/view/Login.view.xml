<mvc:View controllerName="com.mii.scanner.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>titleLogin}">
		<content>
			<HBox alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTopBottom" >
				<Label text="{i18n>userNameLableText}" labelFor="userIdInput" class="sapUiSmallMarginEnd"/>
				<Input id="userIdInput" required="true" change="onLoginPress" placeholder="{i18n>userNameInputPlaceholder}"/>
			</HBox>
			<Button text="{i18n>loginButtonText}" press="onLoginPress" width="100%"/>
		</content>
	</Page>
</mvc:View>