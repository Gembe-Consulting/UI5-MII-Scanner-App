<mvc:View controllerName="com.mii.scanner.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page id="loginPage" title="{i18n>login.pageTitle.text}">
		<content>
			<HBox alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTopBottom">
				<Label text="{i18n>login.label.username.text}" labelFor="userIdInput" class="sapUiSmallMarginEnd"/>
				<Input id="usernameInput" liveChange="onLiveInput" submit="onLogin" placeholder="{i18n>login.input.username.placeholder}" required="true"/>
			</HBox>
			<Button id="loginButton" press="onLogin" text="{i18n>login.button.text}" width="100%"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Text text="Version {i18n>appVersion}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>